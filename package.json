    "@types/deno": "^2.3.0",
    "@types/node": "^24.3.0",
    "@types/ws": "^8.18.1",
    "apekit": "^0.0.33",
    "eslint": "^9.33.0",
    "knip": "^5.62.0",
    "proby": "workspace:^",
    "typescript": "^5.9.2"
  }
